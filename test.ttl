@prefix d2rq: <http://www.wiwiss.fu-berlin.de/suhl/bizer/D2RQ/0.1#> .
@prefix cmt: <http://cmt/> .
@prefix map: <http://mapping/> .
@prefix jdbc: <http://d2rq.org/terms/jdbc/> .
@prefix rba: </SAP/RBA/BPM/> .
@prefix scm: </SAP/RSA/SCM/> .
@prefix spm: </SAP/RSA/SPM/> .
@prefix bar: </SAP/RBA/BAR/> .
@prefix sap: </SAP/> .
@prefix bcm: </SAP/RBA/BCM/> .

map:database a d2rq:Database;
	d2rq:jdbcDriver "org.postgresql.Driver";
	d2rq:jdbcDSN "jdbc:postgresql://localhost:5432/sap";
	d2rq:username "lukaslaskowski";
	jdbc:keepAlive "3600";				# sends noop-query every 3600 seconds
	.

map:SolutionArchitectureComponentMap a d2rq:ClassMap;
    d2rq:dataStorage map:database;
    d2rq:class scm:SolutionArchitectureComponent;
    d2rq:uriPattern "SolutionArchitectureComponent/@@scm.ppms_product_name@@/@@scm.solution_component_reference_architecture_cloud@@/@@scm.solution_component_reference_architecture_hybrid@@/";
    
    
    .
map:partOfReferenceArchitecture_SolutionArchitectureComponentMap_None_0 a d2rq:PropertyBridge;
    d2rq:belongsToClassMap map:SolutionArchitectureComponentMap;
    d2rq:property sap:partOfReferenceArchitecture;
    d2rq:condition "scm.solution_component_reference_architecture_hybrid = 'True'";
    d2rq:column "scm.solution_component_reference_architecture_hybrid";
    .