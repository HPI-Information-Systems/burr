{
    "classes": [
        {
            "id": "@@person.pid@@",
            "class": "Person"
        },
        {
            "id": "@@person.pid@@",
            "class": "Author",
            "condition": [
                "@@person.type@@ = 'author'"
            ],
            "subclassOf": [
                "Person"
            ]
        },
        {
            "id": "@@person.pid@@",
            "class": "Reviewer",
            "condition": [
                "@@person.type@@ = 'reviewer'"
            ],
            "subclassOf": [
                "Person"
            ]
        }
    ],
    "object_properties": [],
    "data_properties": [
        {
            "property": "name",
            "belongsToClass": "Person",
            "type": "string",
            "column": "person.name"
        },
        {
            "property": "email",
            "belongsToClass": "Author",
            "type": "string",
            "column": "person.e-mail"
        },
        {
            "property": "area",
            "belongsToClass": "Reviewer",
            "type": "string",
            "column": "person.area"
        }
    ]
}