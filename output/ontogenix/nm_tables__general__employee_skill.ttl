@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix base: <https://base_ontology.com#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<#TriplesMapEmployee> a rr:TriplesMap;
    rr:logicalTable [ rr:tableName "Employee" ];
    rr:subjectMap [
        rr:template "https://base_ontology.com#Employee/{id}";
        rr:class base:Employee;
    ];
    rr:predicateObjectMap [
        rr:predicate base:id;
        rr:objectMap [ rr:column "id" ];
    ];
    rr:predicateObjectMap [
        rr:predicate base:name;
        rr:objectMap [ rr:column "name" ];
    ].

<#TriplesMapSkill> a rr:TriplesMap;
    rr:logicalTable [ rr:tableName "Skill" ];
    rr:subjectMap [
        rr:template "https://base_ontology.com#Skill/{id}";
        rr:class base:Skill;
    ];
    rr:predicateObjectMap [
        rr:predicate base:id;
        rr:objectMap [ rr:column "id" ];
    ];
    rr:predicateObjectMap [
        rr:predicate base:name;
        rr:objectMap [ rr:column "name" ];
    ].

<#TriplesMapEmployeeSkill> a rr:TriplesMap;
    rr:logicalTable [ rr:tableName "EmployeeSkill" ];
    rr:subjectMap [
        rr:template "https://base_ontology.com#EmployeeSkill/{employee_id}/{skill_id}";
        rr:class base:EmployeeSkill;
    ];
    rr:predicateObjectMap [
        rr:predicate base:employee_id;
        rr:objectMap [ rr:column "employee_id" ];
    ];
    rr:predicateObjectMap [
        rr:predicate base:skill_id;
        rr:objectMap [ rr:column "skill_id" ];
    ].

<#TriplesMapEmployeeHasSkill> a rr:TriplesMap;
    rr:logicalTable [ rr:tableName "EmployeeSkill" ];
    rr:subjectMap [
        rr:template "https://base_ontology.com#Employee/{employee_id}";
        rr:class base:Employee;
    ];
    rr:predicateObjectMap [
        rr:predicate base:hasSkill;
        rr:objectMap [
            rr:parentTriplesMap <#TriplesMapSkill>;
            rr:joinCondition [
                rr:child "skill_id";
                rr:parent "id";
            ];
        ];
    ].

<#TriplesMapSkillIsSkillOf> a rr:TriplesMap;
    rr:logicalTable [ rr:tableName "EmployeeSkill" ];
    rr:subjectMap [
        rr:template "https://base_ontology.com#Skill/{skill_id}";
        rr:class base:Skill;
    ];
    rr:predicateObjectMap [
        rr:predicate base:isSkillOf;
        rr:objectMap [
            rr:parentTriplesMap <#TriplesMapEmployee>;
            rr:joinCondition [
                rr:child "employee_id";
                rr:parent "id";
            ];
        ];
    ].