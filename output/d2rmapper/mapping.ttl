@prefix map: <#> .
@prefix db: <> .
@prefix vocab: <vocab/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix d2rq: <http://www.wiwiss.fu-berlin.de/suhl/bizer/D2RQ/0.1#> .
@prefix jdbc: <http://d2rq.org/terms/jdbc/> .

map:database a d2rq:Database;
	d2rq:jdbcDriver "org.postgresql.Driver";
	d2rq:jdbcDSN "jdbc:postgresql://localhost:5432/basic__relationship__movie_director_simple";
	d2rq:username "lukaslaskowski";
	d2rq:password "password";
	.

# Table director
map:director a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "director/@@director.id@@";
	d2rq:class vocab:director;
	d2rq:classDefinitionLabel "director";
	.
map:director__label a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:director;
	d2rq:property rdfs:label;
	d2rq:pattern "director #@@director.id@@";
	.
map:director_id a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:director;
	d2rq:property vocab:director_id;
	d2rq:propertyDefinitionLabel "director id";
	d2rq:column "director.id";
	d2rq:datatype xsd:integer;
	.

# Table movie
map:movie a d2rq:ClassMap;
	d2rq:dataStorage map:database;
	d2rq:uriPattern "movie/@@movie.id@@";
	d2rq:class vocab:movie;
	d2rq:classDefinitionLabel "movie";
	.
map:movie__label a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:movie;
	d2rq:property rdfs:label;
	d2rq:pattern "movie #@@movie.id@@";
	.
map:movie_id a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:movie;
	d2rq:property vocab:movie_id;
	d2rq:propertyDefinitionLabel "movie id";
	d2rq:column "movie.id";
	d2rq:datatype xsd:integer;
	.
map:movie_director__ref a d2rq:PropertyBridge;
	d2rq:belongsToClassMap map:movie;
	d2rq:property vocab:movie_director;
	d2rq:refersToClassMap map:director;
	d2rq:join "movie.director => director.id";
	.

