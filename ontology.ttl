@prefix base: <https://base_ontology.com#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix schema: <http://schema.org/> .

base:address a owl:DatatypeProperty ;
    rdfs:domain base:Person ;
    rdfs:range xsd:string ;
    rdfs:label "address" ;
    skos:definition "The address of the person." .

base:id a owl:DatatypeProperty ;
    rdfs:domain base:Person ;
    rdfs:range xsd:string ;
    rdfs:label "identifier" ;
    skos:definition "The unique identifier of the person." .

base:name a owl:DatatypeProperty ;
    rdfs:domain base:Person ;
    rdfs:range xsd:string ;
    rdfs:label "name" ;
    skos:definition "The name of the person." .

base:phone a owl:DatatypeProperty ;
    rdfs:domain base:Person ;
    rdfs:range xsd:string ;
    rdfs:label "telephone" ;
    skos:definition "The telephone number of the person." .

base:Person a owl:Class ;
    rdfs:label "Person" ;
    skos:definition "A class representing a person." ;
    rdfs:subClassOf [
        a owl:Restriction ;
        owl:onProperty base:address ;
        owl:allValuesFrom xsd:string
    ], [
        a owl:Restriction ;
        owl:onProperty base:id ;
        owl:allValuesFrom xsd:string
    ], [
        a owl:Restriction ;
        owl:onProperty base:name ;
        owl:allValuesFrom xsd:string
    ], [
        a owl:Restriction ;
        owl:onProperty base:phone ;
        owl:allValuesFrom xsd:string
    ] .